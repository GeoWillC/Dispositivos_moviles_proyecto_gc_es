<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.RegisterActivity">

    <ImageView
        android:id="@+id/gif"
        android:layout_width="200dp"
        android:layout_height="200dp"

        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        style="@style/textTitle"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="REGISTRO"
        android:textColor="@color/rojito"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_register"
        style="@style/ButtonCancel"
        android:layout_width="346dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:text="Registrarse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/etiqueta_correo"
        style="@style/login"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:text="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.068"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gif" />

    <EditText
        android:id="@+id/password"
        android:layout_width="373dp"
        android:layout_height="44dp"
        android:layout_marginHorizontal="24dp"

        android:layout_marginTop="4dp"
        android:backgroundTint="@color/plomo"
        android:hint="****************"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColor="@color/black"

        android:textColorHint="#88715C5D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiqueta_password" />

    <Button
        android:id="@+id/btn_loginMain"
        android:backgroundTint="#FEFAFD"
        android:layout_width="208dp"
        android:layout_height="36dp"
        android:layout_marginBottom="44dp"
        android:text="Â¿Ya tienes una cuenta? Ingresa"
        android:textSize="13dp"
        android:textColor="@color/plomo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_register"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/etiqueta_password"
        style="@style/login"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_marginTop="48dp"
        android:gravity="left"
        android:inputType="date"
        android:text="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.072"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/email"
        android:layout_width="364dp"
        android:layout_height="47dp"
        android:layout_marginHorizontal="24dp"

        android:backgroundTint="@color/plomo"
        android:hint="example@hotmail.com"
        android:padding="8dp"
        android:textColor="@color/black"
        android:textColorHint="#88715C5D"

        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etiqueta_correo" />


</androidx.constraintlayout.widget.ConstraintLayout>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Dispositivos_moviles_proyecto_gc_es1" parent="Theme.Material3.DayNight">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:windowBackground">#F4F1BB</item>
    </style>

    <style name="Theme.Dispositivos_moviles_proyecto_gc_es1" parent="Base.Theme.Dispositivos_moviles_proyecto_gc_es1">
        <item name="android:textColor">@color/azul</item>
        <item name="android:textSize">25sp</item>

    </style>

    <style name="textTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">50sp</item>

    </style>

    <style name="saludo">
        <item name="android:textColor">@color/plomo</item>
        <item name="android:textSize">15sp</item>

    </style>

    <style name="login">
        <item name="android:textColor">@color/rojito</item>
        <item name="android:textSize">14sp</item>

    </style>


    <style name="botonEstilo" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/color_boton</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="botonEstilo2">
        <item name="android:backgroundTint">@color/low_gray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="busqueda">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="busqueda2">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="menu">
        <item name="android:backgroundTint">@color/orange</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">0dp</item>
    </style>

    <style name="Binding_Title">
        <item name="android:textColor">@color/title_binding</item>
    </style>

    <style name="SearchInput">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>


    <style name="ButtonsGeneral">
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">22sp</item>
        <item name="android:backgroundTint">@color/orange</item>
        <item name="cornerRadius">8dp</item>
    </style>


    <style name="ButtonCancel" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/rojito</item>
    </style>

    <style name="ButtonFacebook" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/azul</item>
    </style>

    <style name="ButtonTwitter" parent="ButtonsGeneral">
        <item name="android:backgroundTint">#FFFFFF</item>
    </style>

    <style name="ButtonRecuContra" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/fondo2</item>
        <item name="android:textColor">@color/plomo</item>

    </style>

    <style name="Registrese" parent="ButtonsGeneral">
        <item name="android:backgroundTint">@color/fondo2</item>
        <item name="android:textColor">@color/rojito</item>


    </style>

    <style name="box">
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/rojito</item>
    </style>

    <style name="ThemeOverlay.Dispositivos_moviles_proyecto_gc_es1.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>
    <style name="ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/azul</item>
    </style>

    <style name="MyCustomActivityAnimation"
        parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">
            @anim/slide_out_left</item>
        <item name="android:activityCloseEnterAnimation">
            @anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">
            @anim/slide_out_right</item>
    </style>

    <style name="botonPers" parent="Base.Theme.Dispositivos_moviles_proyecto_gc_es1">
        <item name="android:background">@drawable/boton_personalizado</item>
    </style>

</resources>